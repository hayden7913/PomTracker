{
  "name": "PomTracker",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-eslint": "^8.0.1",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "concurrently": "^3.4.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.7.0",
    "faker": "^4.1.0",
    "mocha": "^3.3.0"
  },
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "body-parser": "^1.17.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "icono": "^1.3.0",
    "moment": "^2.18.1",
    "mongodb": "^2.2.24",
    "mongoose": "^4.8.6",
    "prop-types": "^15.6.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-web-notification": "^0.2.4",
    "shortid": "^2.2.8"
  },
  "scripts": {
    "start": "concurrently \"node server.js\"  \"cd client && npm start\"",
    "server": "node server.js",
    "production:debug": "NODE_ENV=production node server.js",
    "test": "mocha",
    "lint": "eslint --ext .js --ext .jsx server-files || 0",
    "lint:fix": "eslint --fix --ext .js --ext .jsx client/src/ || exit 0",
    "build:client": "cd client && npm run build",
    "push:git": "git add . && git commit -m \"Updates build for deployment\" && git push origin master || exit 0",
    "push:heroku": "git push heroku master",
    "deploy": "npm run build:client && npm run push:git && npm run push:heroku"
  }
}
